- stylesheet "people"
- javascript "ui/people", "ui/common"
- title "Investigators"

- error_log_path = Person.import_error_log(current_user.username)
- if File.exists?(error_log_path) && (File.size?(error_log_path) > 80)
  .page_section
    #upload_error_log
      = link_to "View Upload Errors", {:controller => "welcome", :action => "upload_error_log"}, { :class => "show_link icon_link" }

.page_section 
  = render 'search_form'

.page_section
  = render 'search_results'
  
:javascript
  $(function () {
    peopleUI = new Clearcats.UI.People({ });
  });
