= form_for(@organizational_unit) do |f|
  = render "shared/error_messages", :object => f.object
  %p
    = f.label :name
    %br
    = f.text_field :name
  %p
    = f.label :abbreviation
    %br
    = f.text_field :abbreviation
  %p
    = f.label :parent_id, "Parent"
    %br
    = f.select :parent_id, nested_set_options(OrganizationalUnit, @organizational_unit) { |i| "#{'-' * i.level} #{i.name} (#{i.abbreviation})" }
    
  = render 'org_unit_service_lines'
  %p
    = f.submit 'Save'
