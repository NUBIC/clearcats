%head
  %meta{ "http-equiv" => "content-type", :content => "text/html;charset=UTF-8" }
  %title= "clearcats :: " + (yield(:title) || "Northwestern University")
  = stylesheet_link_tag('jquery-ui-1.8.6.custom')
  = stylesheet_link_tag 'compiled/screen.css', :media => 'screen, projection'
  = stylesheet_link_tag 'compiled/print.css', :media => 'print'
  /[if lt IE 8]
    = stylesheet_link_tag 'compiled/ie.css', :media => 'screen, projection'
    = stylesheet_link_tag 'compiled/ie-custom.css', :media => 'screen, projection'
  = javascript_include_tag("jquery-1.4.4.min", "rails", "application", "jquery-ui-1.8.6.custom.min", "jquery.livequery", "ddsmoothmenu", "jquery.tooltip.min", "jquery.dirtyform", "facebox")
  = yield :javascript
  = surveyor_includes if controller_name == "surveyor"
  = csrf_meta_tag
  = yield(:head)
  = render "shared/menu_init_script"