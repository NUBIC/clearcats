= form_for(@service_request) do |f|
  = render "shared/error_messages", :object => f.object
  %p
    = f.label :organizational_unit_id, "NUCATS Center/Program"
    %br
    = f.select(:organizational_unit_id, OrganizationalUnit.all.sort_by{|e| e.name}.map{|u| [u.to_s, u.id]}, { :include_blank => "-- Select NUCATS Center/Program --" })
  %p
    = f.label :service_line_id
    %br
    = f.select(:service_line_id, ServiceLine.all.sort_by{|e| e.name}.map{|u| [u.to_s, u.id]}, { :include_blank => "-- Select Service Line --" })
  %p
    = f.label :first_name
    %br
    = f.text_field :first_name
  %p
    = f.label :last_name
    %br
    = f.text_field :last_name
  %p
    = f.label :email
    %br
    = f.text_field :email
  %p
    = f.label :project
    %br
    = f.text_field :project
  %p
    = f.label :abstract
    %br
    = f.text_area :abstract
  %p
    = f.submit 'Save'