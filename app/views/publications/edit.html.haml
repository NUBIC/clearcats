- stylesheet "services"
- title "Publication for #{@publication.person}"

:javascript
  $(function () { 
    $(".datepicker").live('mouseover', function() { $(this).datepicker(); }); 
    $("input").live('focus', function() { $(this).closest('form').dirty_form(); });
    $("select").live('focus', function() { $(this).closest('form').dirty_form(); });
    $("a.delete_link").live('focus', function() { $(this).dirty_stopper(); });
  });
  
.publication_form
  = render 'form'
