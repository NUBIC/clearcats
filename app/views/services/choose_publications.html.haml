- stylesheet "people", "publications", "services"
- javascript "ui/publications"
- title "New Service - Choose Publications"

= render "menu"

.page_section
  %p
    Publications PMCIDs that resulted from support from this program.

  = render '/publications/list', :service => @service, :publications => @publications, :search => @search, :person => @service.person, :search => @search_params

  = form_for @service do |f|
    = hidden_field_tag "service[state]", "choose_approvals"
    .buttons
      = f.submit "Continue"
    
:javascript
  $(function () {
    var sortByUrlMap = #{publications_sort_by_url_map(@search).to_json},
        publicationsUI = new Clearcats.UI.Publications({ sortByUrlMap: sortByUrlMap });
  });