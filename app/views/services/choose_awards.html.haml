- stylesheet "people", "awards", "services"
- javascript "awards_ui"
- title "New Service - Choose Awards"

:javascript
  $(function () { $(".datepicker").live('mouseover', function() { $(this).datepicker(); }); });

= render "menu"

.page_section  
  = render '/awards/list', :service => @service, :awards => @awards, :person => @service.person, :search => @search_params

  = form_for @service do |f|
    = hidden_field_tag "service[state]", "choose_publications"
    .buttons
      = f.submit "Continue"


:javascript
  $(function () {
    var sortByUrlMap = #{awards_sort_by_url_map(@search).to_json},
        awardsUI = new Clearcats.AwardsUI({ sortByUrlMap: sortByUrlMap });
  });